// Define a function to check if a course ID is required for the major
function boolean isMajorCourse(String courseId) {
    List<String> majorCourses = Arrays.asList("CSC101", "CSC202", "CSC203", "CSC225", "CSC248", "CSC300", "PHIL323");
    return majorCourses.contains(courseId);
}

function boolean isSupportCourse(String courseId) {
    // Define the list of required course IDs for the major here
    return courseId in ("CSC101", "CSC202", "CSC203", ...);
}

function boolean isConcentrationCourse(String courseId) {
    // Define the list of required course IDs for the major here
    return courseId in ("CSC101", "CSC202", "CSC203", ...);
}

